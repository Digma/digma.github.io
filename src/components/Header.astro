---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import Chart from "./charts/LogoChart.astro";
---

<header class="max-w-[1100px] w-[calc(100%-10em)] pb-[1rem]">
	<nav>
		<div class="flex items-center mt-[2.5rem]">
			<Chart />
			<h2 class="site-title"><a class="ml-[-8.5rem] font-bold text-slate-950 leading-5 tracking-tight" href="/">{SITE_TITLE}</a></h2>
		</div>
		<div class="internal-links mt-[2rem]">
			<HeaderLink href="/">About</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0 auto;
	}
	.site-title a {
		font-size: 1.5em;
		font-family: 'Oswald', sans-serif;
	}
	h2 {
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	.internal-links a {
		padding-left: 0.5em;
		color: var(--gray-light);
		/* border-bottom: 4px solid transparent;*/
		text-decoration: none;
	}
	.internal-links a.active {
		text-decoration: none;
		color: var(--gray-dark);
		font-weight: 600;
	}
	.social-links,
	.social-links a {
		display: flex;
		padding-right: 0.2em;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
